<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/Styles/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <title>Materias</title>
</head>

<body>
    <!--Sidebar-->

    <div id="sidebar" class="div-sidebar animate__animated">
        <div class="div-headSidebar">
            <div class="infoSidebar">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                    class="bi bi-journal-bookmark-fill" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M6 1h6v7a.5.5 0 0 1-.757.429L9 7.083 6.757 8.43A.5.5 0 0 1 6 8V1z">
                    </path>
                    <path
                        d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2z">
                    </path>
                    <path
                        d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1H1z">
                    </path>
                </svg>
                <span class="letras-info-sidebar">Materias</span>
            </div>
            <button id="closeSidebar" class="btn btn-outline-danger">
                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                    class="bi bi-x-square-fill" viewBox="0 0 16 16">
                    <path
                        d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
                </svg>
            </button>
        </div>

        <!--Usuario-->

        <div id="goHome" class="div-elementos">
            <div onclick="location.href='/home'" class="elentos">
                <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-list"
                    viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z">
                    </path>
                </svg>
                <span class="letasMenu">Menu</span>
            </div>
            <button id="addNew" class="btn btn-outline-success add-button">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                    class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                    <path
                        d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0z">
                    </path>
                </svg>
            </button>
        </div>
        <div id="bodySidebar">
            <% materias.forEach(e=> { %>
                <div class="div-elementos">
                    <div id="<%=e.ID%>" data-nombre="<%=e.Nombre%>" data-color="<%=e.Color%>" data-clave="<%=e.Clave%>" data-id_docente="<%=e.ID_Docente%>" data-id_aula="<%=e.ID_Aula%>" data-id_edificio="<%=e.ID_Edificio%>" class="elementos">
                        <span class="letasMenu">
                            <%=e.Nombre%>
                        </span>
                    </div>

                    <button type="button" id="modalEditar<%=e.ID%>" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                            class="bi bi-pencil-fill" viewBox="0 0 16 16">
                            <path
                                d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                        </svg>
                    </button>
                    <button type="button" class="btn btn-outline-danger removeJSON"
                        onclick="location.href='/materia/delete/<%=e.ID%>'">
                        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                            class="bi bi-x-square-fill" viewBox="0 0 16 16">
                            <path
                                d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
                        </svg>
                    </button>
                </div>
                <% }); %>
        </div>
    </div>

    <!--Navbar-->
    <nav class="navPersonal">
        <button id="btnOpenSidebar" class="btn btn-secondary no-visible"><svg xmlns="http://www.w3.org/2000/svg"
                width="50" height="50" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                <path fill-rule="evenodd"
                    d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z">
                </path>
            </svg></button>
    </nav>

    <!--Alertas-->
    <%if(Success.length>0){%>
        <div class="container alertas">
            <div class="row alertas">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>
                        <%=Success%>
                    </strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
        <%}%>


            <!--Modales-->
            <div class="divModales no-visible">



                <div id="modalMaterias" class="modalPersonal animate__animated  no-visible">
                    <div class="headModal">
                        <div class="titleModal">
                            <span id="textoTitulo">Nueva Materia</span>
                        </div>
                        <button id="btnCloseModal" class="btn btn-outline-danger closeModal">
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                                class="bi bi-x-square-fill" viewBox="0 0 16 16">
                                <path
                                    d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
                            </svg>
                        </button>
                    </div>
                    <div class="bodyModal">


                        <div class="rowFiles">
                            <span class="simpleText">Nombre:</span><input name="nombre" type="text" id="inputNombre"
                                class="inputs">
                        </div>

                        <div class="rowFiles">
                            <span class="simpleText">Clave:</span><input type="text" id="inputClaveMateria"
                                class="inputs">
                        </div>
                        <div class="rowFiles">
                            <span class="simpleText">Color:</span><input type="color" id="inputColorMateria"
                                class="inputs" value="#ffffff">
                        </div>
                        <div class="rowFiles">
                            <span class="simpleText">Horario:</span>
                            <button type="button" id="addHorarioMateria"
                                class="btn btn-outline-success add-button addFecha">
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                                    class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                                    <path
                                        d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0z" />
                                </svg>
                            </button>
                            <button type="button" id="eliminarFechaMateria" class="btn btn-outline-danger removeJSON">
                                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor"
                                    class="bi bi-x-square-fill" viewBox="0 0 16 16">
                                    <path
                                        d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
                                </svg>
                            </button>
                            <select name="edificio" id="selectHorario" class="inputs">
                                <% horarios.forEach(e=> { %>
                                    <option data-id="<%=e.ID%>" data-dia="<%=e.Dia%>" data-comienza="<%=e.HoraComienza%>" data-termina="<%=e.HoraTermina%>" data-id_materia="<%=e.ID_Materia%>">
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="rowFiles">
                            <span class="simpleText">Docente:</span><select name="docente" id="selectDocente"
                                class="inputs">
                                <% docentes.forEach(e=> { %>
                                    <option value="<%=e.ID%>">
                                        <%=e.Nombre%>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="rowFiles">
                            <span class="simpleText">Edificio:</span><select name="edificio"
                                id="selectEdificioAddMateria" class="inputs">
                                <% edificios.forEach(e=> { %>
                                    <option value="<%=e.ID%>">
                                        <%=e.Nombre%>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="rowFiles">
                            <span class="simpleText">Aula:</span><select name="edificio" id="selectAulaAddMateria"
                                class="inputs">
                                <% aulas.forEach(e=> { %>
                                    <option value="<%=e.ID%>" data-IDEdificio="<%=e.ID_Edificio%>"
                                        data-NombreAula="<%=e.Nombre%>">
                                        <%=e.Nombre%>
                                    </option>
                                    <% }); %>

                            </select>
                        </div>


                    </div>
                    <div class="fooderModal">
                        <button type="button" id="btnSuccess" class="btn btn-success addButton">Agregar</button>
                    </div>
                </div>

                <div id="subModalAddFechaMateria" class="modalPersonal animate__animated  no-visible">
                    <div class="headModal">
                        <div class="titleModal">
                            <span>Nuevo Docente</span>
                        </div>
                        <button id="closeFechaMateria" class="btn btn-outline-danger closeSubModal">
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor"
                                class="bi bi-x-square-fill" viewBox="0 0 16 16">
                                <path
                                    d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm3.354 4.646L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 1 1 .708-.708z" />
                            </svg>
                        </button>
                    </div>
                    <div class="bodyModal">
                        <div class="rowFiles">
                            <span class="simpleText">Día:</span><select id="selectDiaFechaMateriaComienza"
                                class="inputs"></select>
                        </div>
                        <span class="simpleText">Comienza</span>
                        <div class="rowFiles">
                            <span class="simpleText">Hora:</span><select id="selectHoraFechaMateriaComienza"
                                class="inputs"></select>
                        </div>
                        <div class="rowFiles">
                            <span class="simpleText">Minuto:</span><select id="selectMinutoFechaMateriaComienza"
                                class="inputs"></select>
                        </div>

                        <span class="simpleText">Termina</span>
                        <div class="rowFiles">
                            <span class="simpleText">Hora:</span><select id="selectHoraFechaMateriaTermina"
                                class="inputs"></select>
                        </div>
                        <div class="rowFiles">
                            <span class="simpleText">Minuto:</span><select id="selectMinutoFechaMateriaTermina"
                                class="inputs"></select>
                        </div>
                    </div>
                    <div class="fooderModal">
                        <button type="button" id="btnAgregarFechaHorario"
                            class="btn btn-success addButton">Agregar</button>
                    </div>
                </div>


            </div>

            <!--Sripts-->
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
                integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
                crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
                integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
                crossorigin="anonymous"></script>
            <script type="module"> console.log('hi')</script>
            <script src="/js/index.js"></script>
            <script src="/js/materia.js"></script>
</body>

</html>